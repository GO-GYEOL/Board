<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />

    <!-- Bootstrap CSS -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css"
      integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh"
      crossorigin="anonymous"
    />

    <!-- jquery for ajax and bootstrap css-->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>

    <link rel="stylesheet" href="/public/main.css" />

    <title>Hello, world!</title>
  </head>
  <body>
    <%- include('nav.html') %>

    
    <div class="container p-4 detail">
      <div class="row">
        <div class="col-3">
          <ul class="list-group chat-list">
            <% for(let i = 0; i<chatroom.length; i++){ %>
            <li class="list-group-item" data-id="<%=chatroom[i]._id%>">
              <h6><%=chatroom[i].title%></h6>
              <h6 class="text-small"><%=chatroom[i].member[0]%>, <%=chatroom[i].member[1]%>님의 대화</h6>
            </li>
            <% } %>
          </ul>
        </div>
        <div class="col-9 p-0">
          <div class="chat-room">
            <ul class="list-group chat-content">
                <li><span class="chat-box">chattings[i].content</span></li>
                <li><span class="chat-box">chattings[i].user</span></li>
            </ul>
            <div class="input-group">
              <input class="form-control" id="chat-input" />
              <button class="btn btn-secondary" id="send">전송</button>
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <script>
        let parent;
        let eventSource;
        $('.list-group-item').click(function(e){
            
            parent = this.dataset.id;
            console.log(parent);
            

            $('.chat-content').html('');
            
            if(eventSource != undefined){
              eventSource.close();
            } 
            

            
            eventSource = new EventSource('/message/' + parent); 
            eventSource.addEventListener('test', function(e){
              const data = JSON.parse(e.data)
              data.forEach(chat => {
                $('.chat-content').append(`<li><span class="chat-box">${chat.content}</span></li>`)
              })
            })
        })
        $('#send').click(function(e){
            const input = $('#chat-input').val();
            $.ajax({
                method:"POST",
                url:"/message",
                data:{
                    content:input,
                    parent: parent,
                },
            })
        })
        




    </script>

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->

    <script
      src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
      integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/js/bootstrap.min.js"
      integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
